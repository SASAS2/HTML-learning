{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run HTML file with Chrome",
            "type": "process",
            "command": "edge",
            "args": [
                "${file}"
            ],
            "windows": {
                //这里写你电脑的edge浏览器的安装位置
                "command": "E:/Edge/msedge.exe"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
